<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"

        >


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="820dp"
            android:orientation="vertical"
            android:padding="25dp"
            android:paddingLeft="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/blooddonationhand"
                android:layout_gravity="center"
                android:layout_width="351dp"
                android:layout_height="213dp"
                android:src="@drawable/blooddonationhand">

            </ImageView>

            <TextView
                android:id="@+id/txtusernameUP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="25dp"
                android:drawableLeft="@drawable/username"
                android:drawablePadding="50dp"
                android:fontFamily="@font/acme"
                android:gravity="center"
                android:paddingLeft="45dp"
                android:text="Adel Alawami"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/txtusernameUP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="25dp"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="50dp"
                android:fontFamily="@font/acme"
                android:gravity="center"
                android:paddingLeft="45dp"
                android:text="Adel1Alawami@gmail.com"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/txtusernameUP3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="25dp"
                android:drawableLeft="@drawable/bloodtype"
                android:drawablePadding="50dp"
                android:fontFamily="@font/acme"
                android:gravity="center"
                android:paddingLeft="45dp"
                android:text="A+"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/txtusernameUP4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="25dp"
                android:drawableLeft="@drawable/calendar"
                android:drawablePadding="50dp"
                android:fontFamily="@font/acme"
                android:gravity="center"
                android:paddingLeft="45dp"
                android:text="22 / 7 / 2021"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/txtNoDonated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="25dp"
                android:drawableLeft="@drawable/countdown"
                android:drawablePadding="50dp"
                android:fontFamily="@font/acme"
                android:gravity="center"
                android:paddingLeft="45dp"
                android:text="Number of times"
                android:textSize="20dp"

                />


            <Button
                android:id="@+id/btnUpdateDate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:minHeight="48dp"
                android:text="JUST DONATED"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>




